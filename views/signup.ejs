    <!-- Start Sign Up Area -->
    <div class="login-area pt-90">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-5 col-md-5">
                    <img class="mb-5" src="img/about/11.jpeg" alt="">
                </div>
                <div class="col-xl-6 col-lg-7 col-md-7">
                    <!-- Start section title -->
                    <div class="section-title font-s30">
                        <h2>СОЗДАТЬ НОВЫЙ АККАУНТ</h2>
                    </div>
                    <!-- End section title -->
                    <div class="login-form">
                        <form  action="signup" method="POST" class="gane-form">
                            <!-- start field left -->
                            <div class="form-left">
                                <!-- Start Single Field -->
                                <div class="single-field">
                                    <input type="text" id="fullName" name="fullName" placeholder="Имя *" required>
                                </div>
                                <!-- End Single Field -->
                                <!-- Start Single Field -->
                                <div class="single-field">
                                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Ваш номер телефона *" required>
                                </div>
                                <!-- Start Single Field -->
                                <div class="single-field">
                                    <input type="password" id="password" name="password" placeholder="Пароль *" required>
                                </div>
                                <!-- End Single Field -->
                                <!-- Start Single Field -->
                                <div class="single-field">
                                    <input type="password" id="confirm_password" name="confirm_password" placeholder="Подтвердить пароль *" required>
                                </div>
                                
                                <!-- End Single Field -->
                                <div class="password">
                                    <p class="aggri"><input type="checkbox">Я соглашаюсь со всеми правилами сайта</p>
                                </div>
                                <button class="btn btn-theme" type="submit">Создать аккаунт</button> 
                            </div>
                            <!-- End field left -->
                        </form>
                    </div>
                </div>
            </div>
        </div>
